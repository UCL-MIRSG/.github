{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>UCL-MIRSG/.github//renovate/default-config.json5',
  ],
  'pre-commit': {
    managerFilePatterns: [
      '/precommit/mirsg-hooks.yaml/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      description: 'Update GitHub Safe-Settings version',
      managerFilePatterns: [
        '/.github/workflows/safe-settings.yaml$/',
      ],
      matchStrings: [
        'SAFE_SETTINGS_VERSION:\\s(?<currentValue>.*)',
      ],
      depNameTemplate: 'github/safe-settings',
      datasourceTemplate: 'github-releases',
    },
  ],
}
